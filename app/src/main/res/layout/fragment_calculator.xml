<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.tfg.kaifit_pal.fragments.Calculator">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Space
            android:layout_width="match_parent"
            android:layout_height="21dp" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="77dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/ageText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="37dp"
                android:layout_marginTop="27dp"
                android:layout_marginEnd="41dp"
                android:layout_marginBottom="30dp"
                android:text="Edad"
                android:textColor="#838383"
                android:textSize="17sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/btnMinus"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/btnMinus"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginTop="11dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/rounded_shape_buttons"
                android:gravity="center"
                android:text="-"
                android:textSize="24dp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.321"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/ageTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="14dp"
                android:layout_marginTop="21dp"
                android:layout_marginEnd="14dp"
                android:layout_marginBottom="24dp"
                android:text="25"
                android:textColor="@color/black"
                android:textSize="24sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/btnPlus"
                app:layout_constraintHorizontal_bias="0.705"
                app:layout_constraintStart_toEndOf="@+id/btnMinus"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/btnPlus"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginTop="11dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/rounded_shape_buttons"
                android:gravity="center"
                android:text="+"
                android:textSize="24dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.637"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <View
            android:id="@+id/divider6"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="?android:attr/listDivider" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="102dp"
            android:layout_marginLeft="0dp">

            <TextView
                android:id="@+id/sexText"
                android:layout_width="45dp"
                android:layout_height="25dp"
                android:layout_marginTop="38dp"
                android:layout_marginEnd="25dp"
                android:layout_marginBottom="36dp"
                android:gravity="start"
                android:text="Sexo"
                android:textColor="#838383"
                android:textSize="17dp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.109"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0" />

            <Button
                android:id="@+id/ButtonMale"
                android:layout_width="115dp"
                android:layout_height="49dp"
                android:layout_gravity="center"
                android:layout_marginEnd="28dp"
                android:layout_marginBottom="27dp"
                android:background="@drawable/rect_button_notpressed"
                android:text="Hombre"
                android:textSize="17dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/ButtonFemale" />

            <Button
                android:id="@+id/ButtonFemale"
                android:layout_width="115dp"
                android:layout_height="49dp"
                android:layout_gravity="center"
                android:layout_marginTop="26dp"
                android:layout_marginEnd="39dp"
                android:background="@drawable/rect_button_notpressed"
                android:text="Mujer"
                android:textSize="17dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <View
            android:id="@+id/divider7"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="?android:attr/listDivider" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="490dp">

            <ImageView
                android:id="@+id/actFactorInfo"
                android:layout_width="21dp"
                android:layout_height="21dp"
                android:layout_marginTop="27dp"
                android:layout_marginEnd="155dp"
                android:src="@drawable/baseline_info_24"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/divider8" />

            <ImageView
                android:id="@+id/percentInfo"
                android:layout_width="21dp"
                android:layout_height="21dp"
                android:layout_marginEnd="88dp"
                android:layout_marginBottom="76dp"
                android:src="@drawable/baseline_info_24"
                app:layout_constraintBottom_toTopOf="@+id/divider8"
                app:layout_constraintEnd_toEndOf="parent" />

            <ImageView
                android:id="@+id/neckInfo"
                android:layout_width="21dp"
                android:layout_height="21dp"
                android:layout_marginEnd="92dp"
                android:layout_marginBottom="156dp"
                android:src="@drawable/baseline_info_24"
                app:layout_constraintBottom_toTopOf="@+id/divider8"
                app:layout_constraintEnd_toEndOf="parent" />

            <ImageView
                android:id="@+id/hipsInfo"
                android:layout_width="21dp"
                android:layout_height="21dp"
                android:layout_marginStart="116dp"
                android:layout_marginBottom="76dp"
                android:src="@drawable/baseline_info_24"
                app:layout_constraintBottom_toTopOf="@+id/divider8"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/heightText"
                android:layout_width="51dp"
                android:layout_height="24dp"
                android:layout_marginStart="56dp"
                android:layout_marginTop="17dp"
                android:gravity="start"
                android:text="Altura"
                android:textColor="#838383"
                android:textSize="17dp"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@+id/editTextHeight"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:id="@+id/editTextHeight"
                android:layout_width="130dp"
                android:layout_height="49dp"
                android:layout_marginStart="46dp"
                android:layout_marginEnd="58dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/edittext_borders"
                android:ems="10"
                android:hint="0 cm"
                android:inputType="numberDecimal"
                android:paddingStart="11dp"
                android:textColor="@color/black"
                android:textColorHint="#AD989898"
                app:layout_constraintBottom_toTopOf="@+id/waistText"
                app:layout_constraintEnd_toStartOf="@+id/editTextWeight"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/heightText" />

            <TextView
                android:id="@+id/weightText"
                android:layout_width="63dp"
                android:layout_height="24dp"
                android:layout_marginTop="17dp"
                android:layout_marginEnd="103dp"
                android:gravity="start"
                android:text="Peso"
                android:textColor="#838383"
                android:textSize="17dp"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@+id/editTextWeight"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/neckText"
                android:layout_width="53dp"
                android:layout_height="24dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="113dp"
                android:gravity="start"
                android:text="Cuello"
                android:textColor="#838383"
                android:textSize="17dp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/editTextWeight" />

            <EditText
                android:id="@+id/editTextNeck"
                android:layout_width="130dp"
                android:layout_height="49dp"
                android:layout_marginEnd="48dp"
                android:layout_marginBottom="9dp"
                android:background="@drawable/edittext_borders"
                android:ems="10"
                android:hint="0.00 cm"
                android:inputType="numberDecimal"
                android:paddingStart="11dp"
                android:textColor="@color/black"
                android:textColorHint="#AD989898"
                app:layout_constraintBottom_toTopOf="@+id/fatPercentText"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/neckText" />

            <TextView
                android:id="@+id/fatPercentText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="118dp"
                android:gravity="center"
                android:text="% PGC"
                android:textColor="#838383"
                android:textSize="17dp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/editTextNeck" />

            <EditText
                android:id="@+id/editTextWeight"
                android:layout_width="130dp"
                android:layout_height="49dp"
                android:layout_marginEnd="48dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/edittext_borders"
                android:ems="10"
                android:hint="0.00 kg"
                android:inputType="numberDecimal"
                android:paddingStart="11dp"
                android:textColor="@color/black"
                android:textColorHint="#AD989898"
                app:layout_constraintBottom_toTopOf="@+id/neckText"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/weightText" />

            <TextView
                android:id="@+id/waistText"
                android:layout_width="57dp"
                android:layout_height="24dp"
                android:layout_marginStart="56dp"
                android:layout_marginTop="8dp"
                android:gravity="start"
                android:text="Cintura"
                android:textColor="#838383"
                android:textSize="17dp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/editTextHeight" />

            <EditText
                android:id="@+id/editTextWaist"
                android:layout_width="130dp"
                android:layout_height="49dp"
                android:layout_marginStart="46dp"
                android:layout_marginEnd="58dp"
                android:background="@drawable/edittext_borders"
                android:ems="10"
                android:hint="0.00 cm"
                android:inputType="numberDecimal"
                android:paddingStart="11dp"
                android:textColor="@color/black"
                android:textColorHint="#AD989898"
                app:layout_constraintBottom_toTopOf="@+id/hipText"
                app:layout_constraintEnd_toStartOf="@+id/editTextNeck"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/waistText" />

            <TextView
                android:id="@+id/hipText"
                android:layout_width="56dp"
                android:layout_height="24dp"
                android:layout_marginStart="56dp"
                android:layout_marginTop="8dp"
                android:gravity="start"
                android:text="Cadera"
                android:textColor="#838383"
                android:textSize="17dp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/editTextWaist" />

            <EditText
                android:id="@+id/editTextHip"
                android:layout_width="130dp"
                android:layout_height="49dp"
                android:layout_marginStart="46dp"
                android:layout_marginEnd="58dp"
                android:background="@drawable/edittext_disabled_background"
                android:ems="10"
                android:enabled="false"
                android:hint="0.00 cm"
                android:inputType="numberDecimal"
                android:paddingStart="11dp"
                android:textColor="@color/black"
                android:textColorHint="#AD989898"
                app:layout_constraintEnd_toStartOf="@+id/TextViewFatPercent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/hipText" />

            <TextView
                android:id="@+id/activityFactorText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="56dp"
                android:layout_marginTop="25dp"
                android:layout_marginEnd="177dp"
                android:layout_marginBottom="1dp"
                android:gravity="center"
                android:text="Factor de Actividad"
                android:textColor="#838383"
                android:textSize="17dp"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@+id/spinnerActivityFactor"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.645"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/divider8" />

            <Spinner
                android:id="@+id/spinnerActivityFactor"
                android:layout_width="285dp"
                android:layout_height="51dp"
                android:layout_marginStart="48dp"
                android:layout_marginEnd="48dp"
                android:background="@drawable/edittext_borders"
                android:entries="@array/sport_activity_levels"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.366"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/activityFactorText" />

            <Button
                android:id="@+id/buttonCalculate"
                android:layout_width="188dp"
                android:layout_height="51dp"
                android:layout_marginTop="9dp"
                android:layout_marginBottom="31dp"
                android:background="@drawable/rect_button_pressed"
                android:text="Calcular"
                android:textSize="17dp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.497"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/spinnerActivityFactor" />

            <View
                android:id="@+id/divider8"
                android:layout_width="409dp"
                android:layout_height="2dp"
                android:layout_marginStart="1dp"
                android:layout_marginEnd="1dp"
                android:layout_marginBottom="210dp"
                android:background="?android:attr/listDivider"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/TextViewFatPercent"
                android:layout_width="130dp"
                android:layout_height="49dp"
                android:layout_marginTop="2dp"
                android:layout_marginEnd="46dp"
                android:background="@drawable/edittext_borders"
                android:gravity="center_vertical"
                android:hint="0.00 %"
                android:inputType="numberDecimal"
                android:paddingStart="11dp"
                android:paddingEnd="11dp"
                android:textColor="@color/black"
                android:textSize="17dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/fatPercentText" />

            <ImageView
                android:id="@+id/waistInfo"
                android:layout_width="21dp"
                android:layout_height="21dp"
                android:layout_marginStart="116dp"
                android:layout_marginBottom="157dp"
                android:src="@drawable/baseline_info_24"
                app:layout_constraintBottom_toTopOf="@+id/divider8"
                app:layout_constraintStart_toStartOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>
</FrameLayout>
