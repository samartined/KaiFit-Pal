<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="Base.Theme.KaiFitPal" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your light theme here. -->
        <item name="colorPrimary">@color/white_green</item>
        <item name="colorSecondary">@color/dark_green</item>
        <item name="android:windowBackground">@color/beige</item>
    </style>

    <!-- Theme.KaiFitPal inherits from Base.Theme.KaiFitPal -->
    <style name="Theme.KaiFitPal" parent="Base.Theme.KaiFitPal" />

    <!-- Customizing toolbar -->
    <style name="Theme.KaiFitPal.Toolbar" parent="Theme.KaiFitPal">
        <item name="colorControlNormal">@color/white</item>
    </style>
</resources>
